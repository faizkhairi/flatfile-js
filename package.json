{
  "name": "flatfile-js",
  "version": "0.1.0",
  "description": "Schema-first parser and generator for pipe/comma/tab-delimited flat files with type coercion and validation",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["flat-file", "pipe-delimited", "csv", "tsv", "parser", "schema", "enterprise", "etl", "b2b"],
  "author": "faizkhairi <ifaizkhairi@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/faizkhairi/flatfile-js.git"
  },
  "homepage": "https://github.com/faizkhairi/flatfile-js#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
